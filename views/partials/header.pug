#header
    #header-title
        span NodePKI Webclient
    #header-menu
        ul
            li
                a(href="/") Home
            li
                a(href="/cacerts") CA Certs

            if auth && auth.authed === true
                li
                    a(href="/request") Request Certificate
    #header-login
        if auth && auth.authed === true
            | Logged in as #{auth.username}.&nbsp;
            a(href="/logout") Log out.
        else
            span Not logged in.
            a(href="/") Log in.
