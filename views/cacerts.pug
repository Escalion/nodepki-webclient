doctype html
html(lang="en")
    include ./partials/head.pug

    body
        include ./partials/header.pug

        #content
            if success
                h1 #{title}

                h2 File downloads:

                ul(style="list-style-type:none;")
                    li
                        a(href=rootdownload) root.cert.pem
                    li
                        a(href=intermediatedownload) intermediate.cert.pem

                h2 Root CA certificate
                pre #{content.rootcert}

                h2 Intermediate CA certificate
                pre #{content.intermediatecert}
            else
                p.banner.fail #{errormessage}

        include ./partials/foot.pug
